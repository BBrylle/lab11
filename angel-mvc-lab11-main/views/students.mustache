<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }
        .header {
            background-color: #343a40;
            color: white;
            padding: 20px;
            border-radius: 0.5rem;
            text-align: center;
            margin-bottom: 20px;
        }
        .table {
            background-color: white;
            border-radius: 0.5rem;
            overflow: hidden;
        }
        .table th {
            background-color: #007bff;
            color: white;
        }
        .table-hover tbody tr:hover {
            background-color: #e1e7ff;
        }
        .no-data {
            text-align: center;
            font-style: italic;
            color: #6c757d;
        }
        .pagination {
            margin-top: 20px;
        }
        .footer {
            text-align: center;
            margin-top: 20px;
            color: #6c757d;
        }
    </style>
</head>

<body>

    <div class="container mt-5">
        <div class="header">
            <h1 class="mb-0">Students</h1>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Student Code</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Date of Birth</th>
                        <th>Sex</th>
                    </tr>
                </thead>
                <tbody>
                    {{#students}}
                    <tr>
                        <td>{{getStudentCode}}</td>
                        <td>{{getFirstName}}</td>
                        <td>{{getLastName}}</td>
                        <td>{{getEmail}}</td>
                        <td>{{getDateOfBirth}}</td>
                        <td>{{getSex}}</td>
                    </tr>
                    {{/students}}
                    {{^students}}
                    <tr>
                        <td colspan="6" class="no-data">No students found.</td>
                    </tr>
                    {{/students}}
                </tbody>
            </table>
        </div>

        <nav>
            <ul class="pagination justify-content-center mt-4">
                <li class="page-item"><a class="page-link" href="/courses">List of Courses</a></li>
                <li class="page-item"><a class="page-link" href="/students">List of Students</a></li>
            </ul>
        </nav>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
