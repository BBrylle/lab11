<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: scale(1.05);
        }
        .sidebar {
            min-height: 100vh;
            background-color: #343a40;
            padding: 20px;
        }
        .sidebar a {
            color: white;
        }
        .sidebar a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body class="bg-light">
    <div class="d-flex">
        <div class="sidebar p-3">
            <h2 class="text-white">Navigation</h2>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link" href="/courses">List of Courses</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="/students">List of Students</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-primary" href="/enrollment-form">Enroll a Student</a>
                </li>
            </ul>
        </div>
        <div class="container mt-5 p-4">
            <h1 class="mb-4">Courses</h1>
            <div class="row">
                {{# items }}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ course_name }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{ course_code }}</h6>
                            <p class="card-text">Enrollees: {{ enrolee_count }}</p>
                            <a href="/courses/{{ course_code }}" class="btn btn-info">View Students</a>
                            <a href="/exportPDF/{{ course_code }}" class="btn btn-secondary">Export PDF</a>
                        </div>
                    </div>
                </div>
                {{/ items }}
                {{^ items }}
                <div class="col-12">
                    <div class="alert alert-warning text-center" role="alert">
                        No courses available.
                    </div>
                </div>
                {{/ items }}
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
