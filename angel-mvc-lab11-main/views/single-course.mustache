<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .course-card {
            padding: 20px;
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .table th {
            background-color: #343a40;
            color: white;
        }
        .pagination {
            margin-top: 20px;
        }
    </style>
</head>

<body>

    <div class="container mt-5">
        <div class="course-card mb-4">
            <h1 class="mb-1">{{ course.course_code }}</h1>
            <h2 class="text-danger mb-3">{{ course.course_name }}</h2>
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Student Name</th>
                </tr>
            </thead>
            <tbody>
                {{# enrollees }}
                <tr>
                    <td>{{ student_code }}</td>
                    <td>{{ student_name }}</td>
                </tr>
                {{/ enrollees }}
                {{^ enrollees }}
                <tr>
                    <td colspan="2" class="text-center">No students enrolled.</td>
                </tr>
                {{/ enrollees }}
            </tbody>
        </table>

        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item"><a class="page-link" href="/courses">List of Courses</a></li>
                <li class="page-item"><a class="page-link" href="/students">List of Students</a></li>
            </ul>
        </nav>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
